<!-- 1枚目の背景画像（最奥） -->
<div class="absolute -top-6 left-0 w-full h-full bg-black rounded-lg transform scale-95 z-0">
  <%= image_tag "black.webp", 
                    alt: "背景画像1", 
                    class: "w-full h-full object-cover rounded-lg opacity-50", 
                    loading: "lazy" %>
</div>
<!-- 2枚目の背景画像（中間） -->
<div class="absolute -top-3 left-0 w-full h-full bg-black rounded-lg transform scale-98 z-10">
  <%= image_tag "black.webp", 
                    alt: "背景画像2", 
                    class: "w-full h-full object-cover rounded-lg opacity-75", 
                    loading: "lazy" %>
</div>
<!-- 3枚目のサムネイル（最前面） -->
<%= image_tag playlist.clips.first&.thumbnail_url&.gsub('%{width}x%{height}', '320x180'), 
                  alt: "メインサムネイル", 
                  class: "rounded-lg w-full object-cover relative z-20", 
                  style: "height: 200px;", 
                  loading: "lazy" %>

<!-- クリップ数表示（一番前面） -->
<span class="absolute bottom-2 right-2 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded z-30">
  <%= playlist.clips.count %>本のクリップ
</span>