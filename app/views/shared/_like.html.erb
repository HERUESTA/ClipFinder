  <div id="playlist_<%= playlist.id %>_like">
    <% if playlist.liked_by?(current_user) %>
    <%= link_to playlist_likes_path(playlist), 
          data: { turbo_method: :delete, controller: "like", action: "click->like#disable" } do %>
    <i class="fas fa-heart text-sm text-purple-500" aria-hidden="true"></i>
    <%= playlist.likes_count %>
    <% end %>
    <% else %>
    <%= link_to playlist_likes_path(playlist), 
          data: { turbo_method: :post, controller: "like", action: "click->like#disable" } do %>
    <i class="fas fa-heart text-sm" aria-hidden="true"></i>
    <%= playlist.likes_count %>
    <% end %>
    <% end %>
  </div>