<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">パスワードを変更する</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-control">
      <%= f.label :password, "新しいパスワード", class: "label text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
      <em class="text-xs text-black">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", 
          class: "bg-white input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :password_confirmation, "新しいパスワードの確認", class: "label text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "bg-white input input-bordered w-full" %>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "パスワードを変更する", class: "btn btn-primary w-full bg-purple-500 hover:bg-purple-600 text-white" %>
    </div>
    <% end %>

    <div class="text-center mt-4 space-y-2">
      <%= link_to "ログイン", new_session_path(resource_name), class: "link link-hover text-sm text-purple-600" %><br>
      <%= link_to "新規登録", new_registration_path(resource_name), class: "link link-hover text-sm text-purple-600" %>
    </div>
  </div>
</div>