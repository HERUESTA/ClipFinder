<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>

    <div class="form-control">
      <%= f.label :email, "Eメール", class: "label text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "bg-white input input-bordered w-full" %>
      <!-- Eメールのエラーがある場合 -->
      <% if resource.errors.include?(:email) %>
      <ul class="text-red-500 text-sm mt-2">
        <% resource.errors.full_messages_for(:email).each do |error_message| %>
        <li><%= error_message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "パスワードリセットのメールを送る", class: "btn btn-primary w-full bg-purple-500 hover:bg-purple-600 text-white" %>
    </div>
    <% end %>

    <div class="text-center mt-4 space-y-2">
      <%= link_to "Log in", new_session_path(resource_name), class: "link link-hover text-sm text-purple-600" %><br>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "link link-hover text-sm text-purple-600" %><br>
      <%= button_to user_twitch_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-primary bg-purple-500 hover:bg-purple-600" do %>
      <i class="fa-brands fa-twitch mr-2"></i> Twitchでログイン
      <% end %>
    </div>
  </div>
</div>