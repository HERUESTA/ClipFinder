<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-black mb-6">サインアップ画面</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- ユーザー名 -->
    <div>
      <%= f.label :user_name, "ユーザー名", class: "block text-sm font-medium text-black" %>
      <%= f.text_field :user_name, autofocus: true, autocomplete: "username", 
        class: "bg-white input input-bordered w-full mt-1", 
        placeholder: "ユーザー名" %>
    </div>

    <!-- Eメール -->
    <div>
      <%= f.label :email, "Eメール", class: "block text-sm font-medium text-black" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "bg-white input input-bordered w-full mt-1", 
          placeholder: "general@example.com" %>
    </div>

    <!-- パスワード -->
    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-black" %>
      <% if @minimum_password_length %>
      <em class="text-sm text-black">（<%= @minimum_password_length %>文字以上）</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", 
          class: "bg-white input input-bordered w-full mt-1", 
          placeholder: "パスワード" %>
    </div>

    <!-- パスワード確認 -->
    <div>
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-black" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "bg-white input input-bordered w-full mt-1", 
          placeholder: "パスワード確認" %>
    </div>

    <!-- サインアップボタン -->
    <div>
      <%= f.submit "サインアップ", class: "btn bg-purple-500 hover:bg-purple-600 text-white w-full" %>
    </div>
    <% end %>

    <!-- サインインリンク -->
    <p class="text-center text-sm text-gray-500 mt-4">
      既にアカウントを持っている？
      <%= link_to "サインイン", new_user_session_path, class: "text-purple-600 hover:underline" %>
    </p>
  </div>
</div>