<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-black mb-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <!-- Eメール -->
    <div>
      <%= f.label :email, "Eメール", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-white input input-bordered w-full mt-1", placeholder: "general@example.com" %>
      <!-- Eメールのエラーがある場合 -->
      <% if resource.errors.include?(:email) %>
      <ul class="text-red-500 text-sm mt-2">
        <% resource.errors.full_messages_for(:email).each do |error_message| %>
        <li><%= error_message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>

    <!-- パスワード -->
    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "bg-white input input-bordered w-full mt-1", placeholder: "パスワード" %>
      <!-- パスワードのエラーがある場合 -->
      <% if resource.errors.include?(:password) %>
      <ul class="text-red-500 text-sm mt-2">
        <% resource.errors.full_messages_for(:password).each do |error_message| %>
        <li><%= error_message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>

    <!-- ログイン情報を保存 -->
    <% if devise_mapping.rememberable? %>
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "checkbox checkbox-primary mr-2" %>
      <%= f.label :remember_me, "ログイン情報を保存", class: "text-sm text-gray-700" %>
    </div>
    <% end %>

    <!-- ログインボタン -->
    <div>
      <%= f.submit "ログイン", class: "btn btn-primary w-full bg-purple-500 hover:bg-purple-600 text-white" %>
    </div>
    <% end %>

    <!-- その他リンク -->
    <div class="text-center text-sm mt-4 text-gray-500">
      <%= link_to "新規登録", new_registration_path(resource_name), class: "link link-primary" %><br>
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "link link-primary" %>
    </div>

    <!-- または -->
    <div class="divider">または</div>

    <!-- Twitchログイン -->
    <div class="flex justify-center">
      <%= button_to user_twitch_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-primary bg-purple-500 hover:bg-purple-600 flex items-center justify-center" do %>
      <i class="fa-brands fa-twitch text-lg"></i>
      <p class="text-white">
        Twitchでログイン
      </p>
      <% end %>
    </div>
  </div>