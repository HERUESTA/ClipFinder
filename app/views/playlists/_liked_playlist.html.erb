<% if playlist.present? %>
<div class="p-4" id="<%= dom_id(playlist) %>">
  <!-- プレイリストへのリンク -->
  <%= link_to playlist_path(playlist), class: "block" do %>
  <div class="rounded-lg p-2 relative group">
    <%= link_to playlist_path(playlist), class: "block relative" do %>
    <%= render "shared/playlist_card", playlist: playlist %>
    <% end %>
  </div>
  <% end %>

  <!-- タイトル、アイコン、三点リーダーを横並びに配置 -->
  <div class="flex items-center justify-between mt-4 z-50">
    <!-- 左側のタイトルとアイコン -->
    <div>
      <!-- プレイリストタイトル -->
      <h3 class="text-lg font-bold text-black">
        <%= playlist.title %>
      </h3>
      <!-- 公開・非公開といいね・共有 -->
      <div class="flex items-center space-x-4 text-sm mt-2">
        <div class="flex items-center space-x-4">
          <!-- いいねボタン -->
          <div id="playlist_<%= playlist.id %>_like">
            <%= render "playlists/like", playlist: playlist %>
          </div>
          <!-- 共有アイコン -->
          <%= link_to "https://twitter.com/intent/tweet?text=#{CGI.escape("📺 Twitch: https://clips.twitch.tv/#{playlist&.clips&.first&.clip_id}\n#️⃣ ハッシュタグ: #TwitchClipFinder\n")}&url=#{CGI.escape(playlist_url(playlist))}", target: "_blank", rel: "noopener noreferrer", title: "Xでシェアする" do %>
          <i class="fa-brands fa-twitter text-gray-500"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>